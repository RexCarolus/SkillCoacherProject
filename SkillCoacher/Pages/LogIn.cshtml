@page
@model LogInModel
@{
    Layout = "_SignLayout";
    ViewData["Title"] = "Login  page";
}

<form class="form-signin text-center" method="post">
    <h1 class="h3 mb-3 font-weight-normal">Авторизация</h1>
    <label for="inputEmail" class="sr-only">Email</label>
    <input type="email" id="inputEmail" class="form-control" placeholder="Email address" asp-for="LogInUser.Login" required autofocus>
    <label for="inputPassword" class="sr-only">Пароль</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="Password" asp-for="LogInUser.Password" required>
   
    <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>
    <a asp-page="/SignUp">Зарегистрироваться</a>
    <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
</form>
