@page
@model SignUpModel
@{
 
    Layout = "_SignLayout";
    ViewData["Title"] = "Sign up page";
}

<form class="form-signin text-center" method="post">
    <h1 class="h3 mb-3 font-weight-normal">Регистрация</h1>
    <label for="inputEmail" class="sr-only">Email</label>
    <input type="email" id="inputEmail" class="form-control" placeholder="Email address" asp-for="NewUser.Login" required autofocus>
    <label for="inputPassword" class="sr-only">Пароль</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="Password" asp-for="NewUser.Password" required>
    <label for="inputPassword" class="sr-only">Повторите пароль</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="Repeat password" required>
    <div class="checkbox mb-3">
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Зарегистрироваться</button>
    <a asp-page="Login">Войти</a>
    <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
</form>
